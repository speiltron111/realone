{{ 'component-cart-items.css' | asset_url | stylesheet_tag }}
{{ 'component-totals.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}
{{ 'component-discounts.css' | asset_url | stylesheet_tag }}
{{ 'component-loading-overlay.css' | asset_url | stylesheet_tag }}

<script src="{{ 'cart.js' | asset_url }}" defer="defer"></script>

{% style %}
  {% if settings.account_page_style == "style-3" %}
  	.tax-note {
  		font-size: 1.3rem;
  	}
  {% endif %}
  {% if section.settings.upsell_bg != blank %}
  	.upsell-product {
  		background-color: {{ section.settings.upsell_bg }};
  	}
  {% endif %}
  {% if section.settings.summary_bg != blank %}
  	.cart__blocks {
  		background-color: {{ section.settings.summary_bg }};
  	}
  {% endif %}

  #shopify-section-{{ section.id }} .is-empty .cart__wrapper {
  	padding-top: 0;
  	padding-bottom: 0;
  }

   @media screen and (max-width: 749px) {
  	#shopify-section-{{ section.id }} .title-wrapper {
  		padding-top: {{ section.settings.banner_top_padding | divided_by: 18.7 }}rem;
  		padding-bottom: {{ section.settings.banner_bottom_padding | divided_by: 18.7 }}rem;
  	}

  	#shopify-section-{{ section.id }} .cart__wrapper {
  		padding-top: {{ section.settings.top_padding | divided_by: 18.7 }}rem;
  		padding-bottom: {{ section.settings.bottom_padding | divided_by: 18.7 }}rem;
  	}


  	#shopify-section-{{ section.id }} .is-empty:not(.empty-with-banner) .cart__warnings {
  		margin-top: {{ section.settings.banner_top_padding | divided_by: 18.7 }}rem;
  		margin-bottom: {{ section.settings.banner_bottom_padding | divided_by: 18.7 }}rem;
  	}
   }
  @media screen and (min-width: 750px) and (max-width: 1199px) {
  	#shopify-section-{{ section.id }} .title-wrapper {
  		padding-top: {{ section.settings.banner_top_padding | divided_by: 15.0 }}rem;
  		padding-bottom: {{ section.settings.banner_bottom_padding | divided_by: 15.0 }}rem;
  	}
  	#shopify-section-{{ section.id }} .cart__wrapper {
  		padding-top: {{ section.settings.top_padding | divided_by: 15.0 }}rem;
  		padding-bottom: {{ section.settings.bottom_padding | divided_by: 15.0 }}rem;
  	}
  	#shopify-section-{{ section.id }} .is-empty:not(.empty-with-banner) .cart__warnings {
  		margin-top: {{ section.settings.banner_top_padding | divided_by: 15.0 }}rem;
  		margin-bottom: {{ section.settings.banner_bottom_padding | divided_by: 15.0 }}rem;
  	}
  }
  @media screen and (min-width: 1200px) {
  	#shopify-section-{{ section.id }} .title-wrapper {
  		padding-top: {{ section.settings.banner_top_padding | divided_by: 10.0 }}rem;
  		padding-bottom: {{ section.settings.banner_bottom_padding | divided_by: 10.0 }}rem;
  	}
  	#shopify-section-{{ section.id }} .cart__wrapper {
  		padding-top: {{ section.settings.top_padding | divided_by: 10.0 }}rem;
  		padding-bottom: {{ section.settings.bottom_padding | divided_by: 10.0 }}rem;
  	}
  	#shopify-section-{{ section.id }} .is-empty:not(.empty-with-banner) .cart__warnings  {
  		margin-top: {{ section.settings.banner_top_padding | divided_by: 10.0 }}rem;
  		margin-bottom: {{ section.settings.banner_bottom_padding | divided_by: 10.0 }}rem;
  	}
  }

  {% if  section.settings.heading_letter_spacing != 0 %}
  	@media screen and (min-width: 750px) {
  		#shopify-section-{{ section.id }} .cart-header .h1 {
  			letter-spacing: {{ section.settings.heading_letter_spacing }}rem;
  		}
  	}
  {% endif %}
  .cart-section .quantity__input {
  	font-size: {{ section.settings.picker_font_size | divided_by: 10.0 }}rem;
  	font-weight: {{ section.settings.picker_font_weight }};
  }

  {% if section.settings.text != blank %}
  	#shopify-section-{{ section.id }} a:has(.replace-color) {
  		color: {{ section.settings.text_color_2 }};
  	}
  	{% endif %}
  	{% if section.settings.product_bg != blank %}
  	.cart-item__media>div {
  		background: {{ section.settings.product_bg }};
  	}
  {% endif %}
{% endstyle %}

<div class="page-width main-cart-items {{ section.settings.cart_style }} {{ section.settings.empty_cart_style }} {% if cart == empty %} is-empty{% endif %}">
  <h1 class="visually-hidden">
    {{ 'sections.cart.title' | t }}
  </h1>
  <div class="cart-header {% if settings.theme_animations != 'no-animation' %} aside-text scroll-animation active{% endif %}">
    <div class="title-wrapper">
      <h2 class="h1 title title--primary {{ section.settings.heading_style }}">
        {% if section.settings.text != blank %}
          {% assign wordList = section.settings.text | split: ', ' %}
          {% assign textToReplace = 'sections.cart.title' | t %}
          {% assign textToReplace = textToReplace | split: '' %}
          {% assign content = '' %}
          {% assign result = '' %}
          {% assign insideTag = false %}

          {% for char in textToReplace %}
            {% if insideTag %}
              {% if char == '>' %}
                {% assign insideTag = false %}
              {% endif %}
              {% assign result = result | append: char %}
            {% else %}
              {% if char == '<' or forloop.last %}
                {% assign insideTag = true %}
                {% if forloop.last %}
                  {% assign content = content | append: char %}
                {% endif %}
                {% for word in wordList %}
                  {% assign replace_text = '<<<'
                    | append: section.settings.text_color_2
                    | append: '">'
                    | append: word
                    | append: '>>>'
                  %}
                  {% assign content = content | replace: word, replace_text %}
                {% endfor %}

                {% assign content = content | replace: '<<<', '<span class="replace-color" style="color:' %}
                {% assign content = content | replace: '>>>', '</span>' %}
                {% assign result = result | append: content %}
                {% assign content = '' %}
                {% if forloop.last != true %}
                  {% assign result = result | append: char %}
                {% endif %}
              {% else %}
                {% assign content = content | append: char %}
              {% endif %}
            {% endif %}
          {% endfor %}

          {{ result }}
        {% else %}
          {{ 'sections.cart.title' | t }}
        {% endif %}
      </h2>

      {% if section.settings.show_cart_breadcrumbs %}
        {% render 'breadcrumb' %}
      {% endif %}

      {% if section.settings.show_cart_continue_btn %}
        {% liquid
          assign button_label = 'general.continue_shopping' | t
        %}
        {% render 'button',
          button_url: routes.all_products_collection_url,
          button_label: button_label,
          button_style: section.settings.button_style,
          button_type: section.settings.button_type
        %}
      {% endif %}
    </div>

    <div class="cart__warnings">
      <h2 class="{% if section.settings.empty_cart_style == 'empty-with-banner' %} h2 {% else %} h1 {% endif %} cart__empty-text {{ section.settings.heading_style }}">
        {% if section.settings.text != blank %}
          {% liquid
            assign wordList = section.settings.text | split: ', '
            assign textToReplace = 'sections.cart.empty' | t
          %}
          {% for word in wordList %}
            {% liquid
              assign replace_text = '<span class="replace-color" style=color:' | append: section.settings.text_color_2 | append: '>' | append: word | append: '</span>'
              assign textToReplace = textToReplace | replace: word, replace_text
            %}
          {% endfor %}
          {{ textToReplace }}
        {% else %}
          {{ 'sections.cart.empty' | t }}
        {% endif %}
      </h2>
      {% if section.settings.show_cart_breadcrumbs and section.settings.empty_cart_style != 'empty-with-banner' %}
        {% render 'breadcrumb' %}
      {% endif %}
      {% if section.settings.show_cart_continue_empty %}
        {% liquid
          assign button_label = 'general.continue_shopping' | t
        %}
        {% render 'button',
          button_url: routes.all_products_collection_url,
          button_label: button_label,
          button_style: section.settings.button_style,
          button_type: section.settings.button_type
        %}
      {% endif %}
      {% if section.settings.show_cart_account %}
        {% if shop.customer_accounts_enabled and customer == null %}
          <h2 class="cart__login-title">{{ 'sections.cart.login.title' | t }}</h2>
          <p class="cart__login-paragraph">
            {{ 'sections.cart.login.paragraph_html' | t: link: routes.account_login_url }}
          </p>
        {% endif %}
      {% endif %}
    </div>
  </div>
  <div class="cart__wrapper {{ section.settings.style }}">
    <cart-items class="{% if cart == empty %} is-empty{% endif %}">
      <form
        action="{{ routes.cart_url }}"
        class="cart__contents critical-hidden {% if settings.theme_animations != 'no-animation' %} aside-text scroll-animation active{% endif %}"
        method="post"
        id="cart"
      >
        <div class="cart__items" id="main-cart-items" data-id="{{ section.id }}">
          <div class="js-contents">
            {%- if cart != empty -%}
              <table class="cart-items">
                <thead class="small-hide">
                  <tr>
                    <th
                      class="{{ section.settings.label_style }} {{ section.settings.label_font_weight }} {{ section.settings.label_font_size }}"
                      colspan="2"
                      scope="col"
                    >
                      <div class="cart-items__wrapper">
                        {%- if section.settings.items_icon != blank -%}
                          <div class="cart-items__icon">
                            {{
                              section.settings.items_icon
                              | image_url: width: section.settings.items_icon.width
                              | image_tag: loading: 'lazy'
                            }}
                          </div>
                        {%- endif -%}
                        {%- if section.settings.items_label != empty -%}
                          {{ section.settings.items_label }}
                        {%- else -%}
                          {{ 'sections.cart.headings.product' | t }}
                        {%- endif -%}
                      </div>
                    </th>
                    <th
                      class="medium-hide large-up-hide right {{ section.settings.label_style }} {{ section.settings.label_font_weight }} {{ section.settings.label_font_size }}"
                      colspan="1"
                      scope="col"
                    >
                      {{ 'sections.cart.headings.total' | t }}
                    </th>
                    <th
                      class="cart-items__title--center cart-items__heading--wide small-hide {{ section.settings.label_style }} {{ section.settings.label_font_weight }} {{ section.settings.label_font_size }}"
                      colspan="1"
                      scope="col"
                    >
                      {{ 'sections.cart.headings.quantity' | t }}
                    </th>
                    <th
                      class="cart-item__totals-title small-hide right {{ section.settings.label_style }} {{ section.settings.label_font_weight }} {{ section.settings.label_font_size }}"
                      colspan="1"
                      scope="col"
                    >
                      {{ 'sections.cart.headings.total' | t }}
                    </th>
                    {%- if section.settings.cart_style == 'style-4' -%}
                      <th
                        class="small-hide medium-hide right {{ section.settings.label_style }} {{ section.settings.label_font_weight }} {{ section.settings.label_font_size }}"
                        colspan="1"
                        scope="col"
                      ></th>
                    {%- endif -%}
                  </tr>
                </thead>

                <tbody>
                  {%- for item in cart.items -%}
                    <tr class="cart-item" id="CartItem-{{ item.index | plus: 1 }}">
                      <td class="cart-item__media">
                        <div class="{% if section.settings.add_img_padding %} cart-item__media--padding{% endif %} {% if section.settings.img_borders %} with-borders{% endif %}">
                          {% if item.image %}
                            <div
                              class="cart-item__image-wrp{% if section.settings.portrait_image %} cart-item__image--portrait{% endif %}"
                              {% if section.settings.portrait_image == false %}
                                style="height:0; padding-bottom:{{ item.image.height | times: 100 | divided_by: item.image.width }}%;"
                              {% endif %}
                              onclick="window.location.href='{{ item.url }}'"
                            >
                              <img
                                class="cart-item__image"
                                src="{{ item.image | image_url: width: 300 }}"
                                alt="{{ item.image.alt | escape }}"
                                loading="lazy"
                                width="150"
                                height="{{ 150 | divided_by: item.image.aspect_ratio | ceil }}"
                                onclick="window.location.href='{{ item.url }}'"
                              >
                              {%- if item.product.media[1] != null and section.settings.show_secondary_image -%}
                                <img
                                  class="cart-item__image"
                                  src="{{ item.product.media[1] | image_url: width: 300 }}"
                                  alt="{{ item.product.media[1].alt | escape }}"
                                  loading="lazy"
                                  width="150"
                                  height="{{ 150 | divided_by: item.product.media[1].aspect_ratio | ceil }}"
                                  onclick="window.location.href='{{ item.url }}'"
                                >
                              {%- endif -%}
                            </div>
                          {% else %}
                            <div
                              class="cart-item__image-wrp{% if section.settings.portrait_image %} cart-item__image--portrait{% endif %}"
                              {% if section.settings.portrait_image == false %}
                                style="height:0; padding-bottom:100%;"
                              {% endif %}
                            >
                              {{ 'product-6' | placeholder_svg_tag }}
                            </div>
                          {% endif %}
                        </div>
                      </td>

                      <td class="cart-item__details">
                        {%- if section.settings.show_vendor -%}
                          <p class="caption-with-letter-spacing">{{ item.product.vendor }}</p>
                        {%- endif -%}

                        <a
                          href="{{ item.url }}"
                          class="cart-item__name break {{ section.settings.font_size }} {{ section.settings.font_style }} {{ section.settings.font_family }}"
                        >
                          {{ item.product.title | escape }}
                        </a>

                        {% if section.settings.cart_style == 'style-4' or section.settings.style == 'col-2' %}
                          <div class="cart-item__price {{ section.settings.price_font_weight }}">
                            {%- liquid
                              assign product_price = item.original_line_price | divided_by: item.quantity
                            -%}
                            {%- if item.original_line_price != item.final_line_price -%}
                              <s class="price-item price-item--regular">
                                {%- if settings.currency_code_enabled -%}
                                  {{ product_price | money_with_currency }}
                                {% else %}
                                  {{ product_price | money }}
                                {%- endif -%}
                              </s>
                              <span class="price-item price-item--sale">
                                {%- liquid
                                  assign product_discount_price = item.final_line_price | divided_by: item.quantity
                                -%}
                                {%- if settings.currency_code_enabled -%}
                                  {{ product_discount_price | money_with_currency }}
                                {% else %}
                                  {{ product_discount_price | money }}
                                {%- endif -%}
                              </span>
                            {%- else -%}
                              <span class="price-item price-item--sale">
                                {%- if settings.currency_code_enabled -%}
                                  {{ product_price | money_with_currency }}
                                {% else %}
                                  {{ product_price | money }}
                                {%- endif -%}
                              </span>
                            {%- endif -%}
                          </div>

                          <ul class="discounts list-unstyled" aria-label="{{ 'customer.order.discount' | t }}">
                            {%- for discount in item.discounts -%}
                              <li class="discounts__discount">
                                {%- render 'icon-discount' -%}
                                {{ discount.title }}
                              </li>
                            {%- endfor -%}
                          </ul>

                          <div class="cart-item__error" id="Line-item-error-{{ item.index | plus: 1 }}" role="alert">
                            <small class="cart-item__error-text"></small>
                            {%- render 'icon-error' -%}
                          </div>
                        {% endif %}

                        {% if section.settings.show_details %}
                          {%- if item.product.has_only_default_variant == false
                            or item.properties.size != 0
                            or item.selling_plan_allocation != null
                          -%}
                            <dl>
                              {%- if item.product.has_only_default_variant == false -%}
                                {%- for option in item.options_with_values -%}
                                  {%- if section.settings.cart_style == 'style-4' -%}
                                    {%- assign variant_color = option.name | escape | downcase -%}
                                    {% if variant_color == 'color' and section.settings.style == 'col-2' %}

																			{% liquid

																				assign  valid_value = option.value | escape | downcase | replace: " ", "-"
																				assign swatch_value = valid_value

																				assign swatch = option.swatch

																				if swatch.image
																					assign image_url = swatch.image | image_url: width: 50
																					assign swatch_value = 'url(' | append: image_url | append: ')'
																				elsif swatch.color != blank
																					assign swatch_value = 'rgb(' | append: swatch.color.rgb | append: ')'
																				endif
																			%}
                                      <span class="product-option">
                                        <dt>{{ option.name }}:</dt>
                                        <dd>
                                          <span
                                            class="color-icon color--{{ option.value | escape | downcase | replace: " ", "-" }}"
                                            style="background: {{ swatch_value }} !important;"
                                          ></span>
                                        </dd>
                                      </span>

                                    {%- else -%}
                                      <span class="product-option">
                                        <dt>{{ option.name }}:</dt>
                                        <dd>{{ option.value }}</dd>
                                      </span>
                                    {%- endif -%}
                                  {%- else -%}
                                    <div class="product-option">
                                      <dt>{{ option.name }}:</dt>
                                      <dd>{{ option.value }}</dd>
                                    </div>
                                  {%- endif -%}
                                {%- endfor -%}
                              {%- endif -%}

                              {%- for property in item.properties -%}
                                {%- assign property_first_char = property.first | slice: 0 -%}
                                {%- if property.last != blank and property_first_char != '_' -%}
                                  <div class="product-option">
                                    <dt>{{ property.first }}:</dt>
                                    <dd>
                                      {%- if property.last contains '/uploads/' -%}
                                        <a href="{{ property.last }}" target="_blank">
                                          {{ property.last | split: '/' | last }}
                                        </a>
                                      {%- else -%}
                                        {{ property.last }}
                                      {%- endif -%}
                                    </dd>
                                  </div>
                                {%- endif -%}
                              {%- endfor -%}
                            </dl>

                            <p class="product-option">{{ item.selling_plan_allocation.selling_plan.name }}</p>
                          {%- endif -%}
                        {% endif %}

                        {% if section.settings.cart_style != 'style-4' and section.settings.style != 'col-2' %}
                          <div class="cart-item__price {{ section.settings.price_font_weight }}">
                            {%- liquid
                              assign product_price = item.original_line_price | divided_by: item.quantity
                            -%}
                            {%- if item.original_line_price != item.final_line_price -%}
                              <s class="price-item price-item--regular">
                                {%- if settings.currency_code_enabled -%}
                                  {{ product_price | money_with_currency }}
                                {% else %}
                                  {{ product_price | money }}
                                {%- endif -%}
                              </s>
                              <span class="price-item price-item--sale">
                                {%- liquid
                                  assign product_discount_price = item.final_line_price | divided_by: item.quantity
                                -%}
                                {%- if settings.currency_code_enabled -%}
                                  {{ product_discount_price | money_with_currency }}
                                {% else %}
                                  {{ product_discount_price | money }}
                                {%- endif -%}
                              </span>
                            {%- else -%}
                              <span class="price-item price-item--sale">
                                {%- if settings.currency_code_enabled -%}
                                  {{ product_price | money_with_currency }}
                                {% else %}
                                  {{ product_price | money }}
                                {%- endif -%}
                              </span>
                            {%- endif -%}
                          </div>

                          <ul class="discounts list-unstyled" aria-label="{{ 'customer.order.discount' | t }}">
                            {%- for discount in item.discounts -%}
                              <li class="discounts__discount">
                                {%- render 'icon-discount' -%}
                                {{ discount.title }}
                              </li>
                            {%- endfor -%}
                          </ul>

                          <div class="cart-item__error" id="Line-item-error-{{ item.index | plus: 1 }}" role="alert">
                            <small class="cart-item__error-text"></small>
                            {%- render 'icon-error' -%}
                          </div>
                        {% endif %}
                      </td>

                      <td class="cart-item__quantity">
                        <label
                          {% if section.settings.style != 'col-2' and section.settings.cart_style %}
                            class="visually-hidden"
                          {% endif %}
                          for="Quantity-{{ item.index | plus: 1 }}"
                        >
                          {{ 'products.product.quantity.label' | t }}
                        </label>
                        <quantity-input class="quantity">
                          <button class="quantity__button no-js-hidden" name="minus" type="button">
                            <span class="visually-hidden">
                              {{- 'products.product.quantity.decrease' | t: product: item.product.title | escape -}}
                            </span>
                            {% render 'icon-minus' %}
                          </button>
                          <input
                            class="quantity__input"
                            type="number"
                            name="updates[]"
                            value="{{ item.quantity }}"
                            min="{{ item.variant.quantity_rule.min }}"
                            {% if item.variant.quantity_rule.max != null %}
                              max="{{ item.variant.quantity_rule.max }}"
                            {% endif %}
                            aria-label="{{ 'products.product.quantity.input_label' | t: product: item.product.title | escape }}"
                            id="Quantity-{{ item.index | plus: 1 }}"
                            data-index="{{ item.index | plus: 1 }}"
                          >
                          <button class="quantity__button no-js-hidden" name="plus" type="button">
                            <span class="visually-hidden">
                              {{- 'products.product.quantity.increase' | t: product: item.product.title | escape -}}
                            </span>
                            {% render 'icon-plus' %}
                          </button>
                        </quantity-input>
                        <cart-remove-button
                          id="Remove-{{ item.index | plus: 1 }}"
                          data-index="{{ item.index | plus: 1 }}"
                          class="cart-remove-button"
                        >
                          <a
                            href="{{ item.url_to_remove }}"
                            class="link underlined-link {% if settings.drawer_icon %} link--with-icon{% endif %}"
                            aria-label="{{ 'sections.cart.remove_title' | t: title: item.title }}"
                          >
                            {% if settings.drawer_icon != blank %}
                              {{ settings.drawer_icon }}
                            {% else %}
                              {{ 'sections.cart.remove_title' | t }}
                            {% endif %}
                          </a>
                        </cart-remove-button>
                      </td>

                      <td class="cart-item__totals right small-hide">
                        <div class="loading-overlay hidden">
                          <div class="loading-overlay__spinner">
                            {% render 'icon-spinner' %}
                          </div>
                        </div>

                        <div class="cart-item__price-wrapper {{ section.settings.price_font_weight }}">
                          {%- if item.original_line_price != item.final_line_price -%}
                            <dl class="cart-item__discounted-prices">
                              <dt class="visually-hidden">
                                {{ 'products.product.price.regular_price' | t }}
                              </dt>
                              <dd>
                                <s class="cart-item__old-price price price--end">
                                  {%- if settings.currency_code_enabled -%}
                                    {{ item.original_line_price | money_with_currency }}
                                  {% else %}
                                    {{ item.original_line_price | money }}
                                  {%- endif -%}
                                </s>
                              </dd>
                              <dt class="visually-hidden">
                                {{ 'products.product.price.sale_price' | t }}
                              </dt>
                              <dd class="price price--end">
                                {%- if settings.currency_code_enabled -%}
                                  {{ item.final_line_price | money_with_currency }}
                                {% else %}
                                  {{ item.final_line_price | money }}
                                {%- endif -%}
                              </dd>
                            </dl>
                          {%- else -%}
                            <span class="price price--end">
                              {%- if settings.currency_code_enabled -%}
                                {{ item.original_line_price | money_with_currency }}
                              {% else %}
                                {{ item.original_line_price | money }}
                              {%- endif -%}
                            </span>
                          {%- endif -%}

                          {%- if item.variant.available and item.unit_price_measurement -%}
                            <div class="unit-price caption">
                              <span class="visually-hidden">{{ 'products.product.price.unit_price' | t }}</span>
                              {%- if settings.currency_code_enabled -%}
                                {{ item.variant.unit_price | money_with_currency }}
                              {% else %}
                                {{ item.variant.unit_price | money }}
                              {%- endif -%}
                              <span aria-hidden="true">/</span>
                              <span class="visually-hidden"
