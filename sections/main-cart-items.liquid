                        aria-label="{{ 'sections.cart.clear_cart' | t }}"
                      >
                        {{ 'sections.cart.clear_cart' | t }}
                      </a>
                    </noscript>

                    {% if block.settings.show_clear_cart %}
                      <a
                        href="{{ routes.cart_clear_url }}"
                        class="{{ button_style_typec }} cart__clear-button no-js-hidden{% if block.settings.button_stylec == 'btn_secondary' %} button-secondary{% endif %} {% if settings.color_events_button_bg_hover_gradient != blank and button_style_typec == 'button btn-bg-transparent' %} gradient--hover {% endif %}{% if settings.link_icon != blank and button_icon_c == true %} button-with-icon{% endif %} {% if block.settings.button_stylec == 'btn_primary' and settings.color_primery_button_bg_gradient != blank %} gradient gradient--primary{% endif %} {% if block.settings.button_stylec == 'btn_secondary' and settings.color_secondary_button_bg_gradient != blank %} gradient gradient--secondary {% endif %}"
